// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")

}

// --- Definição das Tabelas ---

model Pokemon {
  codigo                  Int    @id @default(autoincrement())
  nome                    String
  codigo_tipo_primario    Int
  codigo_tipo_secundario  Int?

  // -- Relacionamentos --
  tipoPrimario            Tipo @relation("TipoPrimario", fields: [codigo_tipo_primario], references: [codigo])
  tipoSecundario          Tipo? @relation("TipoSecundario", fields: [codigo_tipo_secundario], references: [codigo])
}

model Tipo {
  codigo Int    @id @default(autoincrement())
  nome   String

  // -- Relacionamentos --
  pokemonsPrimarios   Pokemon[] @relation("TipoPrimario")
  pokemonsSecundarios Pokemon[] @relation("TipoSecundario")
}
